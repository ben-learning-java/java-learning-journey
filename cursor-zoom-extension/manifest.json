{
  "manifest_version": 3,
  "name": "Cursor Zoom",
  "version": "1.0",
  "description": "Zoom to your cursor position with a simple button click or keyboard shortcut",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "zoom-to-cursor": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Z"
      },
      "description": "Zoom to cursor position"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false,
      "match_about_blank": false
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Java",
            "type": "shell",
            "command": "javac",
            "args": ["${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Java",
            "type": "shell",
            "command": "java",
            "args": ["${fileBasenameNoExtension}"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": "Compile Java"
        },
        {
            "label": "Compile and Run",
            "dependsOrder": "sequence",
            "dependsOn": ["Compile Java", "Run Java"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}